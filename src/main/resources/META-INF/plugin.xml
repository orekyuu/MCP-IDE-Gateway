<idea-plugin>
    <id>net.orekyuu.mcp-ide-gateway</id>
    <name>MCP IDE Gateway</name>
    <vendor email="support@orekyuu.net" url="https://github.com/orekyuu">orekyuu</vendor>

    <description><![CDATA[
        MCP (Model Context Protocol) server that enables AI assistants like Claude to access and interact with your IDE.
        <br/>
        <br/>
        Features:
        <ul>
            <li>List open projects</li>
            <li>Open files in the editor</li>
            <li>Get call hierarchy for methods</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
            serviceImplementation="net.orekyuu.intellijmcp.services.McpServerService"/>
        <applicationService
            serviceImplementation="net.orekyuu.intellijmcp.services.McpServerLogService"/>
        <applicationService
            serviceImplementation="net.orekyuu.intellijmcp.settings.McpServerSettings"/>
        <applicationConfigurable
            parentId="tools"
            instance="net.orekyuu.intellijmcp.settings.McpServerSettingsConfigurable"
            id="net.orekyuu.intellijmcp.settings.McpServerSettingsConfigurable"
            displayName="MCP Server"/>
        <toolWindow id="MCP Server"
                    anchor="bottom"
                    factoryClass="net.orekyuu.intellijmcp.ui.McpServerToolWindowFactory"
                    icon="AllIcons.Actions.Execute"/>
        <projectService
            serviceImplementation="net.orekyuu.intellijmcp.comment.InlineCommentService"/>
        <projectService
            serviceImplementation="net.orekyuu.intellijmcp.comment.InlineCommentEditorListener"/>
        <postStartupActivity
            implementation="net.orekyuu.intellijmcp.comment.InlineCommentStartupActivity"/>
    </extensions>

    <applicationListeners>
        <listener class="net.orekyuu.intellijmcp.listeners.McpServerStartupListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>
</idea-plugin>
